<div class='content has-text-centered'>
  <!-- Song Name -->
  <h1 class='title has-text-primary'><%= @costume_assignments.first.song_name%></h1>
  <!-- Dance Season -->
  <h2 class='subtitle'><%= @season %></h2>
  <!-- Costume Picture -->
  <% if !@costume.picture.blank? %>
    <%= image_tag @costume.picture, width: 200 %>
  <% elsif !@costume.onepiece_description.blank? %>
    <%= @costume.onepiece_description %>
  <% else %>
    <%= @costume.twopiece_description %>
  <% end %>
</div>
<div class='content has-text-centered'>
  <div class='box'>
    <div class='columns'>
      <!-- Genre -->
      <div class='column'>
        <h2 class='title is-4'>Genre</h2>
        <%= @costume_assignments.first.genre %>
      </div>
      <!-- hair accessory -->
      <div class='column'>
        <h2 class='title is-4'>Hair Accessory</h2>
        <%= @costume_assignments.first.hair_accessory %>
      </div>
      <!-- Shoes -->
      <div class='column'>
        <h2 class='title is-4'>Shoes</h2>
        <%= @costume_assignments.first.shoe %>
      </div>
      <!-- Tights -->
      <div class='column'>
        <h2 class='title is-4'>Tights</h2>
        <%= @costume_assignments.first.tight %>
      </div>
    </div>
  </div>
  <div class='box'>
    <!-- Dancer, Costume Size, Costume Condition -->
    <div class='table-container'>
      <table class='table is-narrow is-striped is-hoverable'>
        <thead class='has-text-weight-bold'>
          <tr>
            <td>Dancer</td>
            <td>Costume Size</td>
            <td>Costume Condition</td>
          </tr>
        </thead>
        <tbody>
          <% @costume_assignments.each do |assignment| %>
          <tr>
            <td><%= assignment.dancer.name %></td>
            <td><%= assignment.costume_size %></td>
            <td><%= assignment.costume_condition %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_season_assignments_path(@costume, season: @season), class: 'button is-success'%>