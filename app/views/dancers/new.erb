<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
<!-- For a Dance Studio to create a dancer -->
<!-- Form Title -->
<h1 class='title has-text-primary has-text-centered'>Add New Dancer</h1>
<!-- Validation Error(s) Notification -->
<%= render "error_notification" %>
<!-- New Dancer Form -->
<div class='box'>
  <%= form_for @dancer do |f| %>
    <%= f.hidden_field :dance_studio_id %>
    <%= f.hidden_field :password %>
    <%= f.hidden_field :password_confirmation %>
    <div class='box'>
      <!-- First Name -->
      <div class='field'>
        <%= f.label :first_name, class: 'label is-capitalized' %>
        <div class='control has-icons-left'>
          <%= f.text_field :first_name, class:'input', placeholder: 'Enter First Name' %>
            <span class='icon is-small is-left'>
              <i class='fas fa-user'></i>
            </span>
        </div>
        <% if any_field_errors(@dancer, :first_name) %>
          <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :first_name) %></p>
        <% end %>
      </div>
      <!-- Last Name -->
      <div class='field'>
        <%= f.label :last_name, class: 'label is-capitalized' %>
        <div class='control has-icons-left'>
          <%= f.text_field :last_name, class:'input', placeholder: 'Enter Last Name' %>
            <span class='icon is-small is-left'>
              <i class='fas fa-user'></i>
            </span>
        </div>
        <% if any_field_errors(@dancer, :last_name) %>
          <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :last_name) %></p>
        <% end %>
      </div>
      <!-- Email -->
      <div class='field'>
        <%= f.label :email, class: 'label' %>
        <div class='control has-icons-left'>
          <%= f.email_field :email, class:'input', placeholder: 'Enter Email' %>
            <span class='icon is-small is-left'>
              <i class='fas fa-envelope'></i>
            </span>
        </div>
        <% if any_field_errors(@dancer, :email) %>
          <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :email) %></p>
        <% end %>
      </div>
    <p class='help is-danger'>Must fill out all fields</p>
    </div>
    <!-- Submit Button -->
    <div class='field'>
      <div class='control'>
        <%= f.submit class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>
<!-- Cancel Button -->
<%= cancel_button(dance_studio_path(current_user)) %>