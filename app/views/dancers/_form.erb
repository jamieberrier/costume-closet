<% if @dancer.errors.any? %>
  <section class='section'>
    <div class='container is-fluid has-text-centered'>
      <div id='error_explanation' class='notification is-danger'>
        <h2>
          <%= pluralize(@dancer.errors.count, "error") %>
          prohibited this dancer from being saved!
        </h2>
      </div>
    </div>
  </section>
<% end %>
<div class='box'>
  <%= form_for @dancer do |f| %>
    <!-- dance studio -->
    <div class='field'>
      <%= f.label :dance_studio, 'Dance Studio', class: 'label' %>
      <div class='control has-icons-left'>
        <div class="select">
          <!-- object.collection_select(method, collection, value_method, text_method, options = {}, html_options = {}) -->
          <%= f.collection_select(:dance_studio_id, DanceStudio.all, :id, :studio_name, {prompt: "Select Your Dance Studio"}, {class: 'select'}) %>
        </div>
        <div class='icon is-small is-left'>
          <i class='fas fa-school'></i>
        </div>
      </div>
      <% if @dancer.errors[:dance_studio].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:dance_studio).to_sentence %></p>
      <% end %>
    </div>
    <!-- first name -->
    <div class='field'>
      <%= f.label :first_name, 'First Name', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.text_field :first_name, class:'input', placeholder: 'Enter First Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
      <% if @dancer.errors[:first_name].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:first_name).to_sentence %></p>
      <% end %>
    </div>
    <!-- last name -->
    <div class='field'>
      <%= f.label :last_name, 'Last Name', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.text_field :last_name, class:'input', placeholder: 'Enter Last Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
      <% if @dancer.errors[:last_name].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:last_name).to_sentence %></p>
      <% end %>
    </div>
    <!-- email -->
    <div class='field'>
      <%= f.label :email, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.email_field :email, class:'input', placeholder: 'Enter Email' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-envelope'></i>
          </span>
      </div>
      <% if @dancer.errors[:email].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:email).to_sentence %></p>
      <% end %>
    </div>
    <!-- password -->
    <div class='field'>
      <%= f.label :password, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
      <% if @dancer.errors[:password].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:password).to_sentence %></p>
      <% end %>
    </div>
    <!-- password confirmation -->
    <div class='field'>
      <%= f.label :password_confirmation, 'Password Confirmation', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password_confirmation, class:'input', placeholder: 'Re-enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
      <% if @dancer.errors[:password_confirmation].any? %>
        <p class='helper has-text-danger'><%= @dancer.errors.full_messages_for(:password_confirmation).to_sentence %></p>
      <% end %>
    </div>
    <!-- submit button -->
    <div class='field'>
      <div class='control'>
        <%= f.submit class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>