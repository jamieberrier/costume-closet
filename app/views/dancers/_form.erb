<div class='box'>
  <%= form_for @dancer do |f| %>
    <!-- dance studio -->
    <div class='field'>
      <%= f.label :dance_studio, 'Dance Studio', class: 'label' %>
      <div class='control has-icons-left'>
        <div class="select">
          <!-- object.collection_select(method, collection, value_method, text_method, options = {}, html_options = {}) -->
          <%= f.collection_select(:dance_studio_id, DanceStudio.all, :id, :studio_name, {prompt: "Select Your Dance Studio"}, {class: 'select'}) %>
        </div>
        <div class='icon is-small is-left'>
          <i class='fas fa-school'></i>
        </div>
      </div>
    </div>
    <!-- first name -->
    <div class='field'>
      <%= f.label :first_name, 'First Name', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.text_field :first_name, class:'input', placeholder: 'Enter First Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
    </div>
    <!-- last name -->
    <div class='field'>
      <%= f.label :last_name, 'Last Name', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.text_field :last_name, class:'input', placeholder: 'Enter Last Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
    </div>
    <!-- email -->
    <div class='field'>
      <%= f.label :email, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.email_field :email, class:'input', placeholder: 'Enter Email' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-envelope'></i>
          </span>
      </div>
    </div>
    <!-- password -->
    <div class='field'>
      <%= f.label :password, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
    </div>
    <!-- password confirmation -->
    <div class='field'>
      <%= f.label :password_confirmation, 'Password Confirmation', class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password_confirmation, class:'input', placeholder: 'Re-enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
    </div>
    <!-- submit button -->
    <div class='field'>
      <div class='control'>
        <%= f.submit class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>
<%= link_to 'Cancel', root_path, class: 'button is-dark' %>