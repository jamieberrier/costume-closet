<!-- Validation Error(s) Notification -->
<%= render 'dancers/error_notification' %>
<div class='box'>
  <!-- Dancer Form -->
  <%= form_for @dancer do |f| %>
    <!-- dance studio -->
    <div class='field'>
      <%= f.label :dance_studio, class: 'label is-capitalized' %>
      <div class='control has-icons-left'>
        <div class="select">
          <!-- object.collection_select(method, collection, value_method, text_method, options = {}, html_options = {}) -->
          <%= f.collection_select(:dance_studio_id, DanceStudio.all, :id, :studio_name, {prompt: "Select Your Dance Studio"}, {class: 'select'}) %>
        </div>
        <div class='icon is-small is-left'>
          <i class='fas fa-school'></i>
        </div>
      </div>
      <% if any_field_errors?(@dancer, :dance_studio) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :dance_studio) %></p>
      <% end %>
    </div>
    <!-- first name -->
    <div class='field'>
      <%= f.label :first_name, class: 'label is-capitalized' %>
      <div class='control has-icons-left'>
        <%= f.text_field :first_name, class:'input', placeholder: 'Enter First Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
      <% if any_field_errors?(@dancer, :first_name) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :first_name) %></p>
      <% end %>
    </div>
    <!-- last name -->
    <div class='field'>
      <%= f.label :last_name, class: 'label is-capitalized' %>
      <div class='control has-icons-left'>
        <%= f.text_field :last_name, class:'input', placeholder: 'Enter Last Name' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-user'></i>
          </span>
      </div>
      <% if any_field_errors?(@dancer, :last_name) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :last_name) %></p>
      <% end %>
    </div>
    <!-- email -->
    <div class='field'>
      <%= f.label :email, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.email_field :email, class:'input', placeholder: 'Enter Email' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-envelope'></i>
          </span>
      </div>
      <% if any_field_errors?(@dancer, :email) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :email) %></p>
      <% end %>
    </div>
    <!-- password -->
    <div class='field'>
      <%= f.label :password, class: 'label' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
      <% if any_field_errors?(@dancer, :password) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :password) %></p>
      <% end %>
    </div>
    <!-- password confirmation -->
    <div class='field'>
      <%= f.label :password_confirmation, class: 'label is-capitalized' %>
      <div class='control has-icons-left'>
        <%= f.password_field :password_confirmation, class:'input', placeholder: 'Re-enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
      </div>
      <% if any_field_errors?(@dancer, :password_confirmation) %>
        <p class='helper has-text-danger'><%= field_error_explaination(@dancer, :password_confirmation) %></p>
      <% end %>
    </div>
    <!-- submit button -->
    <div class='field'>
      <div class='control'>
        <%= f.submit class: 'button is-primary is-capitalized' %>
      </div>
    </div>
  <% end %>
</div>