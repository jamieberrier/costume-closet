<div class='content has-text-centered'>
  <h1 class='title'><%= full_name(@dancer) %></h1>
  <h2 class='subtitle heading has-text-primary'><%= @dancer.dance_studio.studio_name %></h2>
</div>
<!-- Costumes -->
<div class='box'>
  <div class=content>
    <h2 class='heading is-size-5'>Costumes</h2>
  </div>
  <div class='buttons is-grouped'>
    <%= link_to 'Current Costume Assignments', dancer_current_assignments_path(@dancer), class: 'button is-link is-light' %>
    <%= link_to 'All Costumes', dancer_costumes_path(@dancer), class: 'button is-link is-light' %>
  </div>
  </div>
  <!-- Account -->
  <div class='box'>
    <div class=content>
      <h2 class='heading is-size-5'>Account</h2>
    </div>
    <div class='buttons is-grouped'>
      <% if dancer? %>
        <%= link_to 'Edit Account', edit_dancer_path(@dancer), class: 'button is-warning is-light' %>
      <% end %>
      <%= link_to 'Deactivate Account', dancer_path(@dancer), method: :delete, class: 'button is-danger is-light' %>
    </div>
  </div>
</div>