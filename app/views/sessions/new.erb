<div class='container is-fluid'>
  <h1 class='title has-text-primary'>Costume Closet</h1>
  <h2 class='subtitle'>Enter email & password or 
    <button class="button is-success is-small">
      <span class="icon">
        <i class="fab fa-google"></i>
      </span>
      <%= link_to 'Sign In with Google', google_omniauth_path(user_type: params[:user_type]), method: :get, class: 'has-text-white' %>
    </button>
  </h2>
  <!-- sign in form -->
  <div class='box'>
    <%= form_for :user do |f| %>
      <div class='field'>
        <%= f.label :email, class: 'label' %>
        <div class='control has-icons-left'>
          <%= f.text_field :email, class:'input', placeholder: 'Enter Email' %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>
      <div class='field'>
        <%= f.label :password, class: 'label' %>
        <div class='control has-icons-left'>
          <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
        </div>
      </div>
      <div class='field'>
        <div class='control'>
          <%= f.submit 'Sign In', class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>