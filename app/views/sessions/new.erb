<script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
<div class='content has-text-centered'>
  <div class='field'>
    <h1 class='heading is-size-2 has-text-primary'>Costume Closet</h1>
  </div>
  <h2 class='heading is-size-4'>Enter email & password or
    <button class='button is-primary is-outlined is-small'>
      <span class='icon'>
        <i class='fab fa-google'></i>
      </span>
      <%= link_to 'Sign In with Google', google_omniauth_path(user_type: params[:user_type]), method: :get, class: 'has-text-primary' %>
    </button>
  </h2>
</div>
<%= render "form" %>
<%= link_to 'Cancel', root_path, class: 'button is-dark'%>