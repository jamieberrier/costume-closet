<body>
  <section class="section">
    <div class="container">
      <h1 class='title'>Login Here</h1>

      <%= form_for :dance_studio do |f| %>
        <div class='field'>
          <%= f.label :email, class: 'label' %>
          <div class='control has-icons-left'>
            <%= f.text_field :email, class:'input', placeholder: 'Enter Email' %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>
        <div class='field'>
          <%= f.label :password, class: 'label' %>
          <div class='control has-icons-left'>
            <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.submit "Sign In", class: 'button' %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</body>