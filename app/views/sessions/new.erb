<div class='container is-fluid'>
  <h1 class='title has-text-primary'>Costume Closet</h1>
  <h2 class='subtitle'>Enter email & password or <%= link_to 'Sign In with Google', "/auth/google_oauth2", class: 'button is-success is-small', method: :get %></h2>
  <!-- sign in form -->
  <div class='box'>
    <%= form_for :dance_studio do |f| %>
      <div class='field'>
        <%= f.label :email, class: 'label' %>
        <div class='control has-icons-left'>
          <%= f.text_field :email, class:'input', placeholder: 'Enter Email' %>
          <span class="icon is-small is-left">
            <i class="fas fa-envelope"></i>
          </span>
        </div>
      </div>
      <div class='field'>
        <%= f.label :password, class: 'label' %>
        <div class='control has-icons-left'>
          <%= f.password_field :password, class:'input', placeholder: 'Enter Password' %>
          <span class='icon is-small is-left'>
            <i class='fas fa-lock'></i>
          </span>
        </div>
      </div>
      <div class='field'>
        <div class='control'>
          <%= f.submit 'Sign In', class: 'button is-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>