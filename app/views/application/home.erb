<div class='container is-fluid'>
  <h1 class='title has-text-primary'>Costume Closet</h1>
  <h2 class='subtitle'>Welcome to Costume Closet!</h2>
  <!-- Dance Studio New Account -->
  <div class='box'>
    <div class=content>
      <h2 class='subtitle'>Dance Studio Owners:</h2>
      <p>
        Create an account to manage and track your dance studio's costumes and costume assignments
      </p>
    </div>
    <div class='buttons'>
      <%= link_to 'Register with email', register_dance_studio_path, class: 'button is-info', method: :get %>
      <%= link_to 'Register via Google', "/auth/google_oauth2", class: 'button is-info', method: :get %>
    </div>
  </div>
  <!-- Dancer New Account -->
  <div class='box'>
    <div class=content>
      <h2 class='subtitle'>Dancers:</h2>
      <p>
        Create an account to view your costume assignments
      </p>
    </div>
    <div class='buttons'>
      <%= link_to 'Register with email', new_dancer_path, class: 'button is-info', method: :get %>
      <%= link_to 'Register via Google', "/auth/google_oauth2", class: 'button is-info', method: :get %>
    </div>
  </div>
  <!-- Sign in -->
  <div class='box'>
    <p>Already have an account?
    <%= link_to 'Sign In', login_path, class: 'button is-success is-small', method: :get %></p>
  </div>
</div>
  