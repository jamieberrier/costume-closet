<div class="content has-text-centered">
  <h1 class='title is-1 has-text-primary'><%= current_user.studio_name %></h1>
  <h2 class="subtitle is-3"><%= current_user.owner_name %></h2>
</div>
<!-- Costumes -->
<div class='box'>
  <div class=content>
    <h2 class='subtitle is-5'>Costumes</h2>
  </div>
  <div class='buttons'>
    <%= link_to 'New Costume', new_dance_studio_costume_path(current_user), class: 'button is-link is-light' %>
    <%= link_to 'All Costumes', dance_studio_costumes_path(current_user), class: 'button is-link is-light' %>
    <%= link_to 'Current Costumes', studio_current_costumes_path(current_user), class: 'button is-link is-light' %>
    <%= link_to 'Assign Costume', assign_costume_path(current_user), class: 'button' %>
  </div>
<!-- Costume Assignments -->
</div>
  <div class='box'>
    <div class=content>
      <h2 class='subtitle is-5'>Costume Assignments</h2>
    </div>
    <div class='buttons'>
    <%= link_to 'Current Costume Assignments', studio_current_assignments_path(current_user), class: 'button is-success is-light' %>
    <!--%#= link_to 'New Costume Assignment', new_dance_studio_costume_assignment_path(current_user), class: 'button is-success is-light' %-->
    <%= link_to 'All Costume Assignments', dance_studio_costume_assignments_path(current_user), class: 'button is-success is-light' %>
  </div>
</div>
<!-- Dancers -->
<div class='box'>
  <div class=content>
    <h2 class='subtitle is-5'>Dancers</h2>
  </div>
  <div class='buttons'>
    <%= link_to 'All My Dancers', dance_studio_dancers_path(current_user), class: 'button is-primary is-outlined' %>
    <%= link_to 'Current Dancers', studio_current_dancers_path(current_user), class: 'button is-primary is-outlined' %>
  </div>
</div>
<div class='box'>
  <div class=content>
    <h2 class='subtitle is-5'>Account</h2>
  </div>
  <div class='buttons'>
    <%= link_to 'Edit Account Info', edit_dance_studio_path(current_user), class: 'button is-warning' %>
    <%= link_to 'Delete Account', dance_studio_path(current_user), method: :delete, class: 'button is-danger' %>
  </div>
</div>