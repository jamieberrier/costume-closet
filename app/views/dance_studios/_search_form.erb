<%= form_with url: search_path(current_user), method: 'get', local: true do %>
  <div class='field has-addons'>
    <div class='control'>
      <%= text_field_tag :search, params[:search], class: 'input', placeholder: 'enter costume keyword' %>
    </div>
    <div class='control'>
      <%= submit_tag 'Search', name: nil, class: 'button has-text-grey-dark' %>
    </div>
  </div>
<% end%>