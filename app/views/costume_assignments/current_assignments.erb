<div class='container is-fluid'>
  <div class="content">
    <h1 class='title has-text-primary'><%= Time.now.year %> Costume Assignments</h1>
  </div>
  <div class='table-container'>
    <table class='table is-fullwidth is-striped is-hoverable'>
      <thead class='has-text-weight-bold'>
        <td>Costume</td>
        <td>Song Name</td>
        <td>Genre</td>
        <td>Shoes</td>
        <td>Tights</td>
        <% if owner? %>
          <td>Dancer</td>
        <% end %>
        <td>Size</td>
        <td>Condition</td>
      </thead>
      <tbody>
      <% @costume_assignments.each do |assignment| %>
        <tr>
          <td><%= link_to image_tag(Costume.find(assignment.costume_id).picture, width: 100), costume_path(assignment.costume_id) %></td>
          <td><%= assignment.song_name %></td>
          <td><%= assignment.genre %></td>
          <td><%= assignment.shoe %></td>
          <td><%= assignment.tight %></td>
          <% if owner? %>
            <td><%= link_to Dancer.find(assignment.dancer_id).name, dancer_path(assignment.dancer_id) %></td>
          <% end %>
          <td><%= assignment.costume_size %></td>
          <td><%= assignment.costume_condition %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>