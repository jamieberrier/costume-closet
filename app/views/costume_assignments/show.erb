<div class='container is-fluid'>
  <div class="content">
    <h1 class='title has-text-primary'><%= @info.song_name %> Costume Assignments</h1>
  </div>
  <div class='box'>
    <div class='table-container'>
      <table class='table is-fullwidth'>
        <thead class='has-text-weight-bold'>
          <td>Season</td>
          <td>Genre</td>
          <td>Shoes</td>
          <td>Tights</td>
        </thead>
        <tbody>
          <tr>
            <td><%= @info.dance_season %></td>
            <td><%= @info.genre %></td>
            <td><%= @info.shoe %></td>
            <td><%= @info.tight %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class='box'>
    <div class='table-container'>
      <table class='table is-fullwidth is-striped is-hoverable'>
        <thead class='has-text-weight-bold'>
          <td>Dancer</td>
          <td>Costume Size</td>
          <td>Costume Condition</td>
        </thead>
        <tbody>
          <% @costume_assignments.each do |assignment| %>
          <tr>
            <td><%= Dancer.find(assignment.dancer_id).name %></td>
            <td><%= assignment.costume_size %></td>
            <td><%= assignment.costume_condition %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>