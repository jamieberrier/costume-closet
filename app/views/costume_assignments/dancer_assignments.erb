<div class='content has-text-centered'>
  <% if dancer? %> <!-- a dancer viewing his/her costume assignments -->
      <h1 class='title has-text-primary'><%= current_user.name %>'s Costume  Assignments</h1>
    <% else %> <!-- owner viewing a dancer's costume assignmnts -->
      <h1 class='title has-text-primary'><%= @dancer.name %>'s Costume Assignments</h1>
    <% end %>
</div>
<!-- if costume assignment(s) exist, render table -->
<% if @costume_assignments.empty? %>
  <div class='content has-text-centered'>
    <h2 class='subtitle'>No Assignments</h2>
  </div>
<% else %>
  <%= render "table"%>
<% end %>
<!-- Back Button -->
<!-- TODO: for owner, change from request.referer, need button depending on where came from -->
<% if dancer? %>
  <%= link_to 'Back', dancer_path(current_user), class: 'button is-dark' %>
<% else %>
  <%= link_to 'Back', params[:back_page], class: 'button is-dark' %>
<% end %>